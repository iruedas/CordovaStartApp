<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="start-app-plugin" version="0.0.1">
  <name>Start App Plugin</name>
  <description>Starts a windows store app</description>
  <license>Apache 2.0</license>
  <keywords>cordova,device</keywords>
  <js-module src="www/index.js" name="startApp">
    <clobbers target="window.device" />
  </js-module>
  <platform name="windows">
    <js-module src="src/windows/appStartPluginProxy.js" name="AppStartProxy">
      <merges target="" />
    </js-module>
    <framework src="src/windows/OpenApp.csproj" custom="true" type="projectReference" versions="10.*" />
	<config-file target="package.windows10.appxmanifest" parent="/Package/Extensions">
      <Extension Category="windows.activatableClass.inProcessServer">
	  <Path>OpenApp.winmd</Path>
    <InProcessServer>
      <ActivatableClass ActivatableClassId="OpenApp.App" ThreadingModel="both" />
    </InProcessServer>
  </Extension>
    </config-file>	
  </platform>
</plugin>